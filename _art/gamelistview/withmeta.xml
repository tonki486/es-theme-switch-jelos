<theme>
	<formatVersion>7</formatVersion>

    <view name="detailed,video">
		<textlist name="gamelist">
			<fontPath>./../_art/Acre.otf</fontPath>
			<fontSize>0.04</fontSize>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<origin>1.05 0.075</origin>
			<lineSpacing>1.4</lineSpacing>
			<size>.49 .78</size>
		</textlist>

		<text name="md_developer, md_genre, md_releasedate, md_lastplayed, md_gametime" extra="true">
			<fontSize>0.038</fontSize>
		</text>

		<!-- images are 27x27 pixels  on a 720px 1:1 display -->
		<image name="md_developer_icon">
			<pos>0.5 0.675</pos>
			<size>0.0375 0.0375</size>
		</image>

		<text name="md_developer">
			<pos>0.56 0.6625</pos>
			<size>0.45 0.025</size>
		</text>

		<image name="md_genre_icon">
			<pos>0.5 0.7275</pos>
			<size>0.0375 0.0375</size>
		</image>

		<text name="md_genre">
			<pos>0.56 0.715</pos>
			<size>0.45 0.025</size>
		</text>	
		
		<image name="md_releasedate_icon">
			<pos>0.5 0.78</pos>
			<size>0.0375 0.0375</size>
		</image>
		
		<datetime name="md_releasedate">
			<pos>0.56 0.77</pos>
			<size>0.45 0.025</size>
		</datetime>

		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>

		<text name="md_gametime">
			<pos>1 1</pos>
		</text>

		<image ifSubset="systemview:rgb30" name="md_lastplayed_icon">
			<pos>0.5 0.8325</pos>
			<size>0.0375 0.0375</size>
		</image>

		<datetime ifSubset="systemview:rgb30" name="md_lastplayed">
			<pos>0.56 0.8225</pos>
			<size>0.45 0.025</size>
		</datetime>

		<image ifSubset="systemview:rgb30" name="md_gametime_icon">
			<pos>0.5 0.885</pos>
			<size>0.0375 0.0375</size>
		</image>
		
		<text ifSubset="systemview:rgb30" name="md_gametime">
			<pos>0.56 0.8725</pos>
			<size>0.45 0.025</size>
		</text>
			
		<text name="system_name_1" extra="true">
			<text>${system.fullName}</text>
			<size>0.95 0.015</size>
			<pos>0.055 0.08</pos>
			<origin>0 0</origin>
			<fontSize>0.058</fontSize>
			<alignment>left</alignment>
			<fontPath>${mainFont}</fontPath>
		</text>

		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>

		<image name="arrowblock" extra="true">
			<pos>0.01 0.06</pos>
			<path>./../_art/assets/arrow_block.png</path>
			<maxSize>.05 .05</maxSize>
			<origin>0 0</origin>
		</image>
	</view>

	<view name="video">
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.75 0.4</pos>
			<maxSize>0.48 0.48</maxSize>
			<delay>1</delay>
			<zIndex>2</zIndex>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<effect>none</effect>
		</video>
	</view>

	<view name="detailed">
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.75 0.4</pos>
			<maxSize>0.48 0.48</maxSize>
		</image>
	</view>
</theme>
