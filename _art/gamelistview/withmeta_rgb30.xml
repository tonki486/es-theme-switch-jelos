<theme>
	<formatVersion>7</formatVersion>

	<view name="detailed,video">
		<textlist name="gamelist">
			<fontPath>./../_art/Acre.otf</fontPath>
			<fontSize>0.04</fontSize>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<origin>1.05 0.075</origin>
			<lineSpacing>1.4</lineSpacing>
			<size>.49 .78</size>
		</textlist>

		<text name="md_lbl_releasedate, md_lbl_developer, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_genre, md_players, md_playcount, md_releasedate" extra="true">
			<fontSize>0.038</fontSize>
		</text>

		<text name="md_lbl_players">
			<pos>0.5 0.4207</pos>
			<size>0.345833333333333 0.025</size>
		</text>
		
		<text name="md_players">
			<pos>0.80 0.4107</pos>
			<size>0.345833333333333 0.025</size>
		</text>

		<text name="md_lbl_genre">
			<pos>0.5 0.750</pos>
			<size>0.345833333333333 0.025</size>
		</text>

		<text name="md_genre">
			<pos>0.73 0.750</pos>
			<size>0.3 0.025</size>
		</text>	

		<text name="md_lbl_developer">
			<pos>0.5 0.695</pos>
			<size>0.345833333333333 0.025</size>
		</text>

		<text name="md_developer">
			<pos>0.73 0.695</pos>
			<size>0.3 0.025</size>
		</text>	
		
		<datetime name="md_releasedate">
			<pos>0.73 0.81</pos>
			<size>0.345833333333333 0.025</size>
		</datetime>

		<text name="md_lbl_releasedate">
			<pos>0.5 0.81</pos>
			<size>0.345833333333333 0.025</size>
		</text>

		<text name="md_lbl_gametime">
			<pos>0.5 0.865</pos>
			<size>0.345833333333333 0.025</size>
		</text>
		
		<datetime name="md_gametime">
			<pos>0.73 0.865</pos>
			<size>0.345833333333333 0.025</size>
		</datetime>
			
		<text name="system_name_1" extra="true">
			<text>${system.fullName}</text>
			<size>0.95 0.015</size>
			<pos>0.055 0.08</pos>
			<origin>0 0</origin>
			<fontSize>0.058</fontSize>
			<alignment>left</alignment>
			<fontPath>${mainFont}</fontPath>
		</text>

		<image name="arrowblock" extra="true">
			<pos>0.01 0.06</pos>
			<path>./../_art/assets/arrow_block.png</path>
			<maxSize>.05 .05</maxSize>
			<origin>0 0</origin>
		</image>
	</view>

	<view name="video">
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.75 0.4</pos>
			<maxSize>0.48 0.48</maxSize>
			<delay>1</delay>
			<zIndex>2</zIndex>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<effect>none</effect>
		</video>
	</view>

	<view name="detailed">
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.75 0.4</pos>
			<maxSize>0.48 0.48</maxSize>
		</image>
	</view>
</theme>
