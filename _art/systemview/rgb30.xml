<theme defaultView="grid">
	<formatVersion>7</formatVersion>

	<variables>
		<mainFont>./../_art/Acre.otf</mainFont>
	</variables>

	<feature supported="carousel">
		<view name="system">
			<carousel name="systemcarousel">
				<type>horizontal</type>
				<pos>0 0</pos>
				<size>1 1</size>
				<color>00000000</color>
				<logoScale>.7</logoScale>
				<logoSize>1 0.65</logoSize>
				<maxLogoCount>1.5</maxLogoCount>
			</carousel>

			<text name="systemInfo">
				<backgroundColor>dddddd00</backgroundColor>
				<forceUppercase>0</forceUppercase>
				<fontSize>0.04</fontSize>
				<pos>0.5 0.87</pos>
				<origin>0.5 0.5</origin>
				<forceUppercase>0</forceUppercase>
				<fontPath>${mainFont}</fontPath>
			</text>
		</view>
	</feature>

	<view name="system">
		<text name="system_name_1" extra="true">
			<text>${system.fullName}</text>
			<size>0.95 0.015</size>
			<pos>0.055 0.08</pos>
			<origin>0 0</origin>
			<fontSize>0.058</fontSize>
			<alignment>left</alignment>
			<fontPath>${mainFont}</fontPath>
		</text>

		<image name="arrowblock" extra="true">
			<pos>0.01 0.06</pos>
			<path>./../_art/assets/arrow_block.png</path>
			<maxSize>.05 .05</maxSize>
			<origin>0 0</origin>
		</image>
	</view>
</theme>
