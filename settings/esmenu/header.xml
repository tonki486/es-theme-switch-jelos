<theme>
	<formatVersion>7</formatVersion>
    <view name="menu">
	
    <menuBackground name="menubg">
      <color>2d2d2d</color>
    </menuBackground>
	
	<menuText name="menutext, menutitle">
      <fontPath>./assets/Oxygen-Bold.ttf</fontPath>
      <fontSize>.039</fontSize>
      <color>ffffff</color>
    </menuText>
	
	<menuTextEdit name="menutextedit">
      <inactive>./assets/dark/textinput_inactive.png</inactive>
      <active>./assets/dark/textinput_active.png</active>
    </menuTextEdit>
	
	<menuText name="menufooter, menutextsmall">
      <fontPath>./assets/Oxygen-Bold.ttf</fontPath>
      <fontSize>.029</fontSize>		 
      <color>ffffff</color>
    </menuText>
    </view>
	
  
</theme>
